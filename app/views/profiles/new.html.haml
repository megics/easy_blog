%h2 Create New Profile
= simple_form_for @profile do |f|
  %p
    = f.label :first_name
    %br/
    = f.input_field :first_name
  %p
    = f.label :last_name
    %br/
    = f.input_field :last_name
  %p
    = f.label :phone
    %br/
    = f.telephone_field :phone
  %p
    = f.label :university
    %br/
    = f.input_field :university
  %p
    = f.label :address
    %br/
    = f.text_field :address
  %p
    = f.submit
  = link_to 'Back', root_path
