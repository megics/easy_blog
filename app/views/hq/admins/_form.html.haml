.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([:hq, @admin], validate: true) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :surname
        = f.input :email

      .form-actions
        - text = @admin.id.present? ? "Güncelle" : 'Güncelle'
        = f.button :submit, text, class: 'btn btn-primary'
        = link_to "Geri", hq_admins_path, class: 'btn'