<!DOCTYPE html>
<html>
  <head>
    <title>EasyBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <%= value %>
      </div>
  <% end %>

  <!-- this is code we will cut out and put inside menu partial -->

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNavbar">

          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "EASY BLOG", '#', class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Articles', articles_path %></li>
          <% if current_user %>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
              <li><%= link_to "Categories", categories_index_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
        <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
